{
  "manifest_version": 3,
  "name": "Sitemap URL Retriever",
  "version": "3.1",
  "description": "Retrieves all URLs from a website's sitemap with enhanced features for SEO and web development.",
  "permissions": [
      "activeTab",
      "scripting",
      "storage",
      "notifications"
  ],
  "host_permissions": [
      "https://*/*",
      "http://*/*"
  ],
  "action": {
      "default_popup": "popup.html",
      "default_icon": {
          "16": "icon16.png",
          "48": "icon48.png",
          "128": "icon128.png"
      }
  },
  "background": {
      "service_worker": "background.js"
  },
  "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
  }
}